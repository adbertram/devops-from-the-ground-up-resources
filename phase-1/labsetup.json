                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    },
                    "dataDisks": [{
                        "diskSizeGB": 50,
                        "lun": 0,
                        "createOption": "Empty"
                    }]
                },
