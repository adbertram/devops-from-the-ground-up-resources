{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceGroupName": {
            "type": "string",
            "defaultValue": "DevOpsFromTheGroundUpCourse",
            "minLength": 2,
            "maxLength": 60
        },
        "location": {
            "type": "string",
            "defaultValue": "East US"
        }
    },
    "variables": {
        "nicName": "[parameters('vmName')]",
        "storageAccountName": "pinf01stg02",
        "storageAccountID": "[resourceId(parameters('storageAccountResourceGroup'), 'Microsoft.Storage/storageAccounts', variables('storageAccountName'))]",
        "subnetName": "AZR1_PRD_GEN2",
        "vmScriptsContainerName": "scripts",
        "vmStorageAccountContainerName": "vhds",
        "vhdTemplateStorageAccountContainerName": "vhd-templates",
        "vnetID": "[resourceId(parameters('vNetResourceGroup'), 'Microsoft.Network/virtualNetworks', parameters('vNetName'))]",
        "subnetRef": "[concat(variables('vnetID'),'/subnets/', variables('subnetName'))]",
        "provisioningScriptName": "Set-AzureVmConfigurationDefaults.ps1"
    },
    "resources": [{
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "location": "[variables('location')]",
            "properties": {
                "ipConfigurations": [{
                    "name": "ipconfig",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "subnet": {
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }]
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('vmName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nicName'))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('http://',variables('storageAccountName'),'.blob.core.windows.net')]"
                    }
                },
                "osProfile": {
                    "computerName": "[parameters('vmName')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "WindowsConfiguration": {
                        "ProvisionVMAgent": true
                    }
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[parameters('OSDiskName')]",
                        "osType": "windows",
                        "image": {
                            "uri": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/',variables('vhdTemplateStorageAccountContainerName'),'/',parameters('OSDiskName'),'.vhd')]"
                        },
                        "vhd": {
                            "uri": "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/',variables('vmStorageAccountContainerName'),'/',parameters('vmName'),'.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [{
                        "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                    }]
                }
            },
            "resources": [{
                "name": "[variables('provisioningScriptName')]",
                "type": "extensions",
                "location": "[variables('location')]",
                "apiVersion": "2015-06-15",
                "dependsOn": [
                    "[concat('Microsoft.Compute/virtualMachines/', parameters('vmName'))]"
                ],
                "tags": {
                    "displayName": "[variables('provisioningScriptName')]"
                },
                "properties": {
                    "publisher": "Microsoft.Compute",
                    "type": "CustomScriptExtension",
                    "typeHandlerVersion": "1.4",
                    "autoUpgradeMinorVersion": true,
                    "settings": {
                        "commandToExecute": "powershell -ExecutionPolicy Unrestricted -File Set-AzureVmConfigurationDefaults.ps1",
                        "fileUris": [
                            "[concat('https://',variables('storageAccountName'),'.blob.core.windows.net/',variables('vmScriptsContainerName'),'/',variables('provisioningScriptName'))]"
                        ]
                    }
                }
            }]
        }
    ]
}

